<!-- game.erb -->

<h1> Black Jack Game </h1>
<p class="lead"><%= "Hi #{session[:user_name]}, welcome!" %></p>

<div class="well">
  <h4>dealer's hand</h4>
  <ul class="thumbnails">
    <% session[:dealer_hand].each do |card| %>
      <li><img class="thumbnail" src="/images/cards/<%= card_file_name(card) %>.jpg" alt="<%= card_full_name(card) %>"></li>
    <% end %>
  </ul>
  <!-- <p><%= count_points(session[:dealer_hand]) %></p> -->
</div>
<div class="well">
  <h4>player's hand</h4>
  <ul class="thumbnails">
    <% session[:player_hand].each do |card| %>
      <li><img class="thumbnail" src="/images/cards/<%= card_file_name(card) %>.jpg" alt="<%= card_full_name(card) %>"></li>
    <% end %>
  </ul>
</div>
<p><%= count_points(session[:player_hand]) %></p>
<% if @show_hit_button %>
  <form action="/game" method="POST">
    <div class="btn-group">
      <button type="submit" name="hit_or_stay" value="hit" class="btn btn-large"><strong>hit</strong></button>
      <button type="submit" name="hit_or_stay" value="stay" class="btn btn-inverse btn-large">stay</button>
    </div>
  </form>
<% end %>